{% extends "_master.html.j2" %}

{% block maincontent %}
<!-- Header-->
<header class="py-5">
    <div class="container px-5">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xxl-6">
                <div class="text-center my-5">
                    <h1 class="fw-bolder mb-3">{{ model.heading }}</h1>
                    <p class="lead fw-normal text-muted mb-4">{{ model.intro }}</p>
                    {# <a class="btn btn-primary btn-lg" href="#scroll-target">Read our story</a> #}
                </div>
            </div>
        </div>
    </div>
</header>
<!-- About section one-->
{% for story in model.stories %}
<section class="py-5 {{ '' if loop.index is even else 'bg-light' }}">
    <div class="container px-5 my-5">
        <div class="row gx-5 align-items-center">
            <div class="col-lg-6 {{ '' if loop.index is even else 'order-first order-lg-last' }}">
                <img class="img-fluid rounded mb-5 mb-lg-0" src="{{ story.image }}" alt="{{ story.imagealt }}" />
            </div>
            <div class="col-lg-6">
                <h2 class="fw-bolder">{{ story.heading }}</h2>
                <p class="lead fw-normal text-muted mb-0">{{ story.intro }}</p>
            </div>
        </div>
    </div>
</section>
{% endfor %}
{% endblock %}