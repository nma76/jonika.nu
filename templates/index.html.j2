{% extends "_master.html.j2" %}

{% block maincontent %}
<!-- Header / Hero-->
{% if model.hero %}
<header class="bg-dark py-5">
    <div class="container px-5">
        <div class="row gx-5 align-items-center justify-content-center">
            <div class="col-lg-8 col-xl-7 col-xxl-6">
                <div class="my-5 text-center text-xl-start">
                    <h1 class="display-5 fw-bolder text-white mb-2">{{ model.hero.heading }}</h1>
                    <p class="lead fw-normal text-white-50 mb-4">{{ model.hero.intro }}</p>
                    {% if model.hero.actionbutton %}
                    <div class="d-grid gap-3 d-sm-flex justify-content-sm-center justify-content-xl-start">
                        <a class="btn btn-primary btn-lg px-4 me-sm-3" href="{{ model.hero.actionbutton.targeturl }}">
                            {{ model.hero.actionbutton.caption }}
                        </a>
                    </div>
                    {% endif %}
                </div>
            </div>
            <div class="col-xl-5 col-xxl-6 d-none d-xl-block text-center">
                <img class="img-fluid rounded-3 my-5" src="{{ model.hero.image }}" alt="{{ model.hero.imagealt }}" />
            </div>
        </div>
    </div>
</header>
{% endif %}

<!-- Features section-->
{% if model.featuredstories %}
<section id="features">
    <div class="container px-5 my-5">
        <div class="row gx-5">
            <div class="col-lg-4 mb-5 mb-lg-0">
                <h2 class="fw-bolder mb-0">{{ model.featuredstories.heading }}</h2>
            </div>
            {% if model.featuredstories.stories %}
            <div class="col-lg-8">
                <div class="row gx-5 row-cols-1 row-cols-md-2">
                    {% for story in model.featuredstories.stories %}
                    <div class="col mb-5 h-100">
                        <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3">
                            <i class="bi bi-collection"></i>
                        </div>
                        <h2 class="h5">{{ story.heading }}</h2>
                        <p class="mb-0">{{ story.intro }}</p>
                        <p class="mt-2">
                            <a href="{{ story.url }}">{{ story.urlcaption }}</a>
                        </p>
                    </div>
                    {% endfor %}
                </div>
            </div>
            {% endif %}
        </div>
    </div>
</section>
{% endif %}

<!-- Blog preview section-->
{% if model.featuredblog %}
<section>
    <div class="container px-5 my-5">
        <div class="row gx-5 justify-content-center">
            <div class="col-lg-8 col-xl-6">
                <div class="text-center">
                    <h2 class="fw-bolder">{{ model.featuredblog.heading }}</h2>
                    <p class="lead fw-normal text-muted mb-5">{{ model.featuredblog.intro }}</p>
                </div>
            </div>
        </div>
        <div class="row gx-5">
            <!-- Blog post item -->
            {% for post in model.featuredblog.posts %}
            <div class="col-lg-4 mb-5">
                <div class="card h-100 shadow border-0">
                    <img class="card-img-top" src="{{ post.image }}" alt="{{ post.imagealt }}" />
                    <div class="card-body p-4">
                        <div class="badge bg-primary bg-gradient rounded-pill mb-2">{{ post.tag }}</div>
                        <a class="text-decoration-none link-dark stretched-link" href="{{ post.url }}">
                            <h5 class="card-title mb-3">{{ post.heading }}</h5>
                        </a>
                        <p class="card-text mb-0">{{ post.intro }}</p>
                    </div>
                    <div class="card-footer p-4 pt-0 bg-transparent border-top-0">
                        <div class="d-flex align-items-end justify-content-between">
                            <div class="d-flex align-items-center">
                                <img class="rounded-circle me-3" src="{{ post.contact.image }}" alt="{{ post.contact.imagealt }}" />
                                <div class="small">
                                    <div class="fw-bold">{{ post.contact.name }}</div>
                                    <div class="text-muted">{{ post.published }}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
{% endif %}
{% endblock %}