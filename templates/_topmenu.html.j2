<!-- Navigation-->
{% if sitesettings.topmenu %}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container px-5">
        <a class="navbar-brand" href="/">{{ sitesettings.topmenu.homecaption}}</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            {% if sitesettings.topmenu.menuitems %}
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                {% for menuitem in sitesettings.topmenu.menuitems %}
                <li class="nav-item"><a class="nav-link" href="{{ menuitem.url }}">{{ menuitem.heading }}</a></li>
                {% endfor %}
            </ul>
            {% endif %}
        </div>
    </div>
</nav>
{% endif %}